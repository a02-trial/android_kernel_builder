# ===== DEVICE INFO =====
DEVICE_CODENAME=               # ← Ganti dengan codename device lo (Contoh: begonia)
BUILD_VARIANT=                 # ← Jenis build, isi: Regular / KSU-Next / Magisk / dll

# ===== KERNEL CONFIGURATION =====
KERNEL_CONFIG=                 # ← Path defconfig (Contoh: vendor/begonia_user_defconfig)
LOCALVERSION=                 # ← Optional branding versi kernel (Contoh: axira-begonia)

# ===== KERNEL SOURCE =====
KERNEL_SOURCE=https://github.com/dragonzords/device_kernel_source
KERNEL_SOURCE_BRANCH=main

# ===== TOOLCHAIN SETUP (TRB Clang) =====
CLANG_DIR=toolchain/trb_clang
CROSS_COMPILE=aarch64-linux-android-
CROSS_COMPILE_ARM32=arm-linux-androideabi-

# ===== BUILD FLAGS (LLVM Optimized) =====
BUILD_ARGS=CC=clang LD=ld.lld LLVM=1 LLVM_IAS=1

# ===== KERNEL OUTPUT IMAGE =====
OUTPUT_IMAGE_NAME=Image.gz-dtb          # ← Ganti jika device lo pakai Image biasa

# ===== PACKING INTO ANYKERNEL ZIP =====
PACK_KERNEL=true
ANYKERNEL_SOURCE=https://github.com/dragonzords/AnyKernel3
ANYKERNEL_SOURCE_BRANCH=main
ANYKERNEL_DIR=AnyKernel3

# ===== SUKISU ROOT MODULE (Optional) =====
SUKISU_ULTRA=false                      # ← true kalau mau inject KSU Ultra root
